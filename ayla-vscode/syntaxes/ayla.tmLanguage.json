{
  "scopeName": "source.ayla",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#control" },
    { "include": "#functions"},
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#constants" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.ayla",
          "match": "\\b(egg|rock|blueprint)\\b"
        }
      ]
    },

    "control": {
      "patterns": [
        {
          "name": "keyword.control.ayla",
          "match": "\\b(ayla|elen|back|kitkat|next)\\b"
        }
      ]
    },

    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.ayla",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*\\()"
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ayla",
          "match": "\".*?\""
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.ayla",
          "match": "\\b\\d+\\b"
        }
      ]
    },

    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.ayla",
          "match": "(\\+|\\-|\\*|\\/|==|=|<=|>=|<|>|&&|\\|\\|)"
        }
      ]
    },

    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.ayla",
          "match": "\\b(yes|no)\\b"
        },

        {
          "name": "constant.language.ayla",
          "match": "\\b(nil)\\b"
        }
      ]
    }
  }
}
